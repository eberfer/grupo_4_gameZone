<!DOCTYPE html>
<html lang="en">
<%- include('partials/head')%>
<%- include('partials/header')%>

<div class="container">
	<div class="row justify-content-center mt-3">
		<div class="col-10 col-md-8 col-lg-6">
			
			<h3>New game</h3>
			
			<form action="/products/newProduct" method="POST">
				<!-- Game Name -->
				<div class="form-group">
					<label for="Nombre">Nombre</label>
					<input type="text" class="form-control" placeholder="..." name="name" id="Nombre">
				</div>
				
				<!-- Descripcion del juego -->
				<div class="form-group">
					<label for="Detail">Detail</label>
					<input type="text" class="form-control" placeholder="..." name="detail" id="Detail">
				</div>
				
				<!-- Price -->
				<div class="form-group">
					<label for="Precio">Precio</label>
					<input type="number" class="form-control" placeholder="..." name="price" id="Precio">	
				</div>				
				
				<!-- Platform -->
				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<label class="input-group-text" for="platform">Platform</label>
					</div>
					<select class="custom-select" id="platform" name="platform">
						<option selected>...</option>
						<% for (let i = 0; i < platforms.length; i ++){ %>
						<option value="<%= platforms[i].id">
							<%= platforms[i].name %>
						</option>
						<% } %>
					</select>
				</div>
				
				
				<!-- Image ADD -->
				<!-- <div class="form-group">
					<label for="gameImg">gameImg</label>
					<input type="text" class="form-control" placeholder="..." name="gameImg" id="gameImg">	
				</div> -->
				
				<div class="form-group">
					<label for="gameImg">Game Image</label>
					<input type="file" id="gameImg" name="gameImg">
				</div>
				
				
				<!-- Game Category -->
				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<label class="input-group-text" for="gameCategory">Category</label>
					</div>
					<select class="custom-select" id="gameCategory" name="genre">
						<option selected>...</option>
						<% for(let i=0; i < genres.length; i++){ %>
						<option value="<%= genres[i].id %>">
							<%= genres[i].name %>
						</option>
						<% } %>
					</select>
				</div>
				
				<button type="submit">Guardar</button>
			</form>
			
		</div>
	</div>
</div>

<%- include('partials/footer')%>
