<!DOCTYPE html>
<html lang="en">

<%- include('partials/head')%>
<%- include('partials/header')%>

<div class="container">
    <div class="row justify-content-center mt-3">
        
        <div class="col-10 col-md-8 col-lg-6">
            <form>
                <!-- Seccion de Nombre, apellido y Usuario -->
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">First & last name</span>
                    </div>
                    <input type="text" aria-label="First name" class="form-control">
                    <input type="text" aria-label="Last name" class="form-control">
                </div>
                
                <div class="form-group">
                    <label for="userName">Nickname</label>
                    <input type="name" class="form-control" id="userName" aria-describedby="emailHelp">
                </div>
                
                <!-- Seccion de Email -->
                <div class="form-group">
                    <label for="emailAddres">Email address</label>
                    <input type="email" class="form-control" id="emailAddres" aria-describedby="emailHelp">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>
                
                <!-- Seccion Password -->
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1">
                </div>
                
                <!-- confirmacion de Password -->
                <div class="form-group">
                    <label for="inputPassword2">Confirm Password</label>
                    <input type="password" class="form-control" id="inputPassword2">
                </div>
                
                <hr>
                <hr>
                
                <!-- Seleccion de pais -->
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="seleccionDePais">Pais</label>
                    </div>
                    <select class="custom-select" id="seleccionDePais">
                        <option selected>Argentina</option>
                        <option value="1">Brasil</option>
                        <option value="2">Colombia</option>
                        <option value="3">Venezuela</option>
                        <option value="4">Uruguay</option>
                    </select>
                </div>
                
                
                
                <!-- Seccion Terminos y condiciones -->
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="terms&conditions">
                    <label class="form-check-label" for="terms&conditions">Acepto Terminos y condiciones</label>
                </div>
                
                <!-- Boton de confirmacion y Registro -->
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            
        </div>
    </div>
</div>



<%- include('partials/footer')%>
