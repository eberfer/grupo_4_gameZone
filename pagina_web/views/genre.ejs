<!DOCTYPE html>
<html lang="en">
<%- include('partials/head')%>
<%- include('partials/header2')%>

<div class="container-fluid">    
    <h3 class="textAlign">Games List </h3>
    <!-- Listado de juegos -->
    <div class="row justify-content-center">                
        <!-- Tarjeta individual de juego -->
        <% games.forEach(oneGame => { %>
            
            <div class="col-10 col-sm-8 col-md-4 col-lg-3 col-xl-2 cubes hvr-underline-from-center">
                <div class="row">
                    <div class="col">
                        <img class="img-fluid" src="/images/productImg/<%= oneGame.gameImg %>" alt="Game Img">
                    </div>    
                    <hr>                            
                    <div class="col-12 cubeText">
                        <a href="/products/detail/<%= oneGame.id %> "> <p> <%= oneGame.name %>
                            <span> <%= oneGame.expansion %> </span>
                        </p> </a>
                        
                        <p><strong><% if (oneGame.price == 0) { %>
                            Free To Play
                        <% } else { %>
                            $<%= oneGame.price %>
                        <% } %> </strong></p>
                        <a href="/"><button class="btnColor">Add to Cart</button></a>
                    </div>                        
                </div>
            </div>
            
            <% }) %>
            
        </div>        
    </div>  
    
    
    <%- include('partials/footer')%>