<!DOCTYPE html>
<html lang="en">
<%- include('partials/head')%>

<%- include('partials/header2')%>


<!-- Top Section -->
<div class="container p-1">
    <div class="row pt-2 fondo mb-2">
        <!-- carrousel Section -->
        <div class="col-12 col-lg-9  mb-2">
