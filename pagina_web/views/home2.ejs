                            <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                            <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
                            <li data-target="#carouselExampleCaptions" data-slide-to="3"></li>
                        </ol>
                        <div class="carousel-inner">
                            <!-- Carousel Items -->
                            <div class="carousel-item active">
                               <a href="/products/detail/34"><img src="/images/productImg/game_img_1585808471447.jpg" class="d-block w-100" alt="Image 1"></a>
                                
                            </div>
                            
                            <div class="carousel-item">
                                <a href="/products/detail/33"><img src="/images/productImg/game_img_1585808360584.jpg" class="d-block w-100" alt="image 2"></a>
                                
                            </div>
                            <div class="carousel-item">
                                <a href="/products/detail/32"><img src="/images/productImg/game_img_1585808172698.jpg" class="d-block w-100" alt="image 3"></a>
                                
                            </div>
                            <div class="carousel-item">
                                <a href="/products/detail/12"><img src="/images/productImg/game_img_1585784665725.jpg" class="d-block w-100" alt="image 4"></a>
                                
                            </div>
                        </div>
                        <!-- End of Carousel items -->
                        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>                        
                    </div>
                </div>             
            </div>
            <br>
            <br>
            
        </div>
        
        
        
        <!-- Lista lateral derecha -->
        <div class="col-12 col-lg-3 ">
            <h3 class="genreText">Free To Play</h3>
            <div class="row ">
                <div class="col-12">
                    <div class="row justify-content-center">
                        <!-- caja individual -->
                        <div class="col-10 col-sm-5 col-md-3 col-lg-10 news-section hvr-underline-from-center ">
