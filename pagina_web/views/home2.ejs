                             <h6>NFS Underground 2</h6> </a>
                        </div><br>
                    </div>
                </div>
            </div>
        </div>
        
    </div>

    <!-- Seccion de genero -->
    
    <div class="row justify-content-center ddBtn genreText mt-2 p-2">
        <div class="col-12"><h3>Busca por Genero</h3></div>
        <!-- cubos individuales -->
        <% genres.forEach(oneGenre => { %>
            <div class="col-10 col-sm-6 col-md-4 col-lg-2 mb-2 hvr-underline-from-center genreText "><a href="/products/genre/<%= oneGenre.id %> "><%= oneGenre.name %> </a></div>
